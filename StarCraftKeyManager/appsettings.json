{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Debug", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/process_monitor.log",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 5
        }
      }
    ]
  },
  "AppSettings": {
    "ProcessMonitor": {
      "ProcessName": "notepad"
    },
    "KeyRepeat": {
      "Default": {
        "RepeatSpeed": 31,
        "RepeatDelay": 1000
      },
      "FastMode": {
        "RepeatSpeed": 20,
        "RepeatDelay": 500
      }
    }
  }
}
